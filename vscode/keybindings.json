// Place your key bindings in this file to override the defaults
[
  {
    "key": "cmd+ctrl+l",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "cmd+ctrl+h",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "ctrl+,",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus"
  },
  {
    "key": "cmd+p",
    "command": "-workbench.action.quickOpen"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.switchWindow"
  },
  {
    "key": "ctrl+w",
    "command": "search.action.clearSearchResults",
    "when": "sideBarFocus && searchViewletVisible"
  },
  {
    "key": "tab",
    "command": "search.action.focusSearchList",
    "when": "sideBarFocus && searchViewletVisible"
  },
  {
    "key": "enter",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "sideBarFocus && searchViewletVisible"
  },
  {
    "key": "ctrl+g",
    "command": "search.action.focusNextSearchResult",
    "when": "hasSearchResult && searchViewletVisible && editorFocus && vim.mode == 'Normal' && !vim.waitingForKey"
  },
  {
    "key": "ctrl+p",
    "command": "search.action.focusPreviousSearchResult",
    "when": "hasSearchResult && searchViewletVisible && editorFocus && vim.mode == 'Normal' && !vim.waitingForKey"
  },
  {
    "key": "ctrl+g",
    "command": "runCommands",
    "args": {
      "commands": [
        "references-view.next",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    "when": "reference-list.hasResult && reference-list.isActive && !inReferenceSearchEditor && !referenceSearchVisible && !searchViewletVisible && vim.mode == 'Normal' && !vim.waitingForKey"
  },
  {
    "key": "ctrl+p",
    "command": "runCommands",
    "args": {
      "commands": [
        "references-view.prev",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    "when": "reference-list.hasResult && reference-list.isActive && !inReferenceSearchEditor && !referenceSearchVisible && !searchViewletVisible && vim.mode == 'Normal' && !vim.waitingForKey"
  }
]
