// https://code.visualstudio.com/docs/getstarted/keybindings
{
  "editor.quickSuggestions": true,
  "editor.quickSuggestionsDelay": 0,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode", // フォーマッタをprettierに指定
    "editor.formatOnSave": true, // ファイル保存時にPrettierでフォーマット
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true // ファイル保存時にESLintでフォーマット
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode", // フォーマッタをprettierに指定
    "editor.formatOnSave": true, // ファイル保存時にPrettierでフォーマット
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true // ファイル保存時にESLintでフォーマット
    }
  },
  "window.openFoldersInNewWindow": "on",
  "editor.cursorSurroundingLines": 20,
  "rust-analyzer.checkOnSave.enable": true,
  "rust-analyzer.checkOnSave.command": "check",
  "rust-analyzer.checkOnSave.allFeatures": false,
  "[rust]": {
    "editor.formatOnSave": true
  },
  "rust-analyzer.procMacro.enable": true,
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "editor.tabSize": 8,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "f"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
        "before": [":", "w"],
        "commands": [
            "workbench.action.files.save",
        ]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["rust-analyzer.check"]
    },
    {
      "before": ["v"],
      "after": ["v", "l", "h"]
    },
    {
      "before": ["="],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": [":"],
      "after": [";"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["C"],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "rust: cargo check"
        }
      ]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToDeclaration"]
    },
    {
      "before": ["g", "u"],
      "commands": ["editor.action.goToDeclaration"]
      // "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["c", "c"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["s", "v"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["s", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["s", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["s", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["s", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["s", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["Ctrl+o"],
      "commands": ["workbench.action.navigateEditorGroups"]
    },
    {
      "before": ["Q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["g", "h"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["g", "l"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["g", "b"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": [",", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": [",", "a"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": [",", "z"],
      "commands": ["workbench.action.openRecent"]
    },
    {
      "before": [",", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<C-u>"],
      "after": ["2", "0", "k"]
    },
    {
      "before": ["<C-d>"],
      "after": ["2", "0", "j"]
    },
    {
      "before": ["q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["r"],
      "commands": ["editor.action.rename"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["=", "="],
      "after": ["a"]
    },
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": [":"],
      "after": [";"]
    },
    {
      "before": ["<C-u>"],
      "after": ["2", "0", "k"]
    },
    {
      "before": ["<C-d>"],
      "after": ["2", "0", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["c", "c"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {},
  "files.associations": {
    "*.tx": "html"
  },
  "search.useIgnoreFiles": true,
  // カーソル上にあるワードを"*"で検索
  "vim.visualstar": true,
  "files.trimTrailingWhitespace": true,
  //ミニマップをfalse
  "editor.minimap.enabled": false,
  //twigとvueでも有効にします
  "emmet.includeLanguages": {
    "twig": "html",
    "vue-html": "html"
  },
  "editor.scrollBeyondLastLine": false,
  "workbench.colorTheme": "Darcula",
  "editor.tokenColorCustomizations": {
    "[Darcula]": {
      "textMateRules": [
        {
          "scope": "keyword",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "storage",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "constant.language",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "support.class.builtin",
          "settings": {
            "fontStyle": "bold"
          }
        },
        {
          "scope": "entity.name.type.lifetime.rust",
          "settings": {
            "foreground": "#1F888C"
          }
        },
        {
          "scope": "entity.name.type.primitive.rust",
          "settings": {
            "fontStyle": "bold",
            "foreground": "#CC7832"
          }
        },
        {
          "scope": "entity.name.function.macro.rust",
          "settings": {
            "foreground": "#74b9ff"
          }
        },
        {
          "scope": "keyword.operator.question.rust",
          "settings": {
            "fontStyle": "bold",
            "foreground": "#CC7832"
          }
        },
        {
          "scope": "entity.name.type.numeric.rust",
          "settings": {
            "foreground": "#CC7832"
          }
        },
        {
          "scope": "keyword.operator.borrow.and.rust",
          "settings": {
            "fontStyle": ""
          }
        },
        {
          "scope": "meta.attribute.rust",
          "settings": {
            "foreground": "#74b9ff"
          }
        }
      ]
    }
  },
  // "files.autoSave": "afterDelay",
  "scrollkey.line1": 1,
  "scrollkey.line2": 15,
  "scrollkey.line3": 30,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off"
}
