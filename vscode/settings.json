{
  "editor.fontFamily": "Inter",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.7,
  "terminal.external.osxExec": "Alacritty.app",
  "terminal.integrated.fontFamily": "Menlo",
  "terminal.integrated.fontSize": 11,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "editor.unicodeHighlight.nonBasicASCII": false,
  // "editor.quickSuggestionsDelay": 10,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.suggest.showWords": false,
  "editor.parameterHints.enabled": true,
  "editor.smoothScrolling": true,
  "editor.cursorSurroundingLines": 10,
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.bracketPairColorization.enabled": false,
  "git.autoRepositoryDetection": true,
  "window.openFoldersInNewWindow": "on",
  "workbench.tree.indent": 16,
  "search.useIgnoreFiles": true,
  "files.trimTrailingWhitespace": true,
  "scrollkey.line1": 1,
  "scrollkey.line2": 15,
  "scrollkey.line3": 30,
  "git.openRepositoryInParentFolders": "prompt",
  "files.autoSave": "onFocusChange",
  "workbench.editor.closeOnFileDelete": true,

  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // editor color
  "editor.inlayHints.fontSize": 11,
  "workbench.colorCustomizations": {
    // Overrides Theme Default Colors for InlayHints feature
    "editorInlayHint.background": "#FFFFFF10",
    "editorInlayHint.foreground": "#FFFFFF88"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment.line",
        "settings": {
          "foreground": "#FFFFFF5A"
        }
      }
    ]
  },

  // vim
  "vim.statusBarColorControl": false,
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/true",
  "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.handleKeys": {},
  "vim.visualstar": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "f"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["_"],
      "commands": ["workbench.action.focusPanel"]
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    },
    {
      "before": [":", "w"],
      "commands": ["editor.action.files.save"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["rust-analyzer.check"]
    },
    {
      "before": ["v"],
      "after": ["v", "l", "h"]
    },
    {
      "before": ["="],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": [":"],
      "after": [";"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["C"],
      "commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "rust: cargo check"
        }
      ]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToDeclaration"]
    },
    {
      "before": ["g", "s"],
      "commands": ["editor.action.revealDeclaration"]
    },
    {
      "before": ["g", "u"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["c", "c"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["s", "v"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["s", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["s", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["s", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["s", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["s", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["s", "o"],
      "commands": ["workbench.action.moveEditorToNextGroup"]
    },
    {
      "before": ["s", "O"],
      "commands": ["workbench.action.moveEditorToPreviousGroup"]
    },
    {
      "before": ["Ctrl+o"],
      "commands": ["workbench.action.navigateEditorGroups"]
    },
    {
      "before": ["Q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["g", "h"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["g", "l"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["g", "b"],
      "commands": ["workbench.action.navigateBackInEditLocations"]
    },
    {
      "before": ["g", "U"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "I"],
      "commands": ["references-view.findImplementations"]
    },
    {
      "before": [",", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": [",", "r"],
      "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"]
    },
    {
      "before": [",", "a"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": [",", "z"],
      "commands": ["workbench.action.openRecent"]
    },
    {
      "before": [",", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<C-u>"],
      "after": ["3", "0", "k"]
    },
    {
      "before": ["<C-d>"],
      "after": ["3", "0", "j"]
    },
    {
      "before": ["<C-i>"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["-"],
      "commands": [
        "workbench.files.action.focusFilesExplorer",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "before": ["R"],
      "commands": ["workbench.action.tasks.reRunTask"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["=", "="],
      "after": ["a"]
    },
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": [":"],
      "after": [";"]
    },
    {
      "before": ["<C-u>"],
      "after": ["3", "0", "k"]
    },
    {
      "before": ["<C-d>"],
      "after": ["3", "0", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["c", "c"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "todohighlight.keywords": [
    {
      "text": "FIXME:",
      "color": "#2DFE54",
      "backgroundColor": "rgba(0,0,0,0)"
    },
    {
      "text": "TODO:",
      "color": "#2DFE54",
      "backgroundColor": "rgba(0,0,0,0)"
    }
  ],
  "workbench.colorTheme": "Darcula"
}
