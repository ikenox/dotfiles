[include]
  path = ~/.gitconfig.local
[user]
	useConfigOnly = true
	name = Naoto Ikeno
	email = ikenox@gmail.com
[alias]
	co = checkout
	st = status
	ci = commit -a
	di = diff
	br = branch
  graph = log --graph --date=short --decorate=full --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
[core]
  excludesfile = ~/.gitignore
	editor = vim -c \"set fenc=utf-8\"
[push]
	default = simple
[ghq]
  vcs = git
  root = ~/repos
[diff]
	algorithm = patience
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
